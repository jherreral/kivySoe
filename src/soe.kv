#:kivy 1.0.9

<PlayerView>:
    logOP: logID
    logOP2: logID2
    trackOP1: trackID1

    canvas:
        Rectangle:
            pos: self.center_x - 5, 0
            size: 10, self.height

    Log:
        id: logID
        right: root.width
        y: root.center_y

    Log:
        id: logID2
        left: root.x
        top: root.top
        logColor: 0.25,0.30,0.75,1

    TrackColumn:
        id: trackID1
        left: root.x
        y: root.y

<TrackColumn>:
    id:trackColumnClass
    trackColor: 0.25,0.5,0,1
    cols: 1
    rows: 4
    canvas.before:
        Color:
            rgba: trackColumnClass.trackColor
        Rectangle:
            pos: self.pos
            size:self.size
    Label:
        text: root.infoLP[0]
    Label:
        text: root.infoLP[1]        
    Label:
        text: root.infoLP[2]
    Label:
        text: root.infoLP[3]

<Log>:
    id:logClass
    size_hint: None,None
    size: 100,75
    logColor: 0.99,0.5,0,1
    Label:
        id: lab
        text: root.textLogSP        
        size_hint: 1,None
        size:self.texture_size
        canvas.before:
            Color:
                rgba: logClass.logColor
            Rectangle:
                pos: self.pos
                size:self.size