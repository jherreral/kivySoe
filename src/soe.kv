#:kivy 1.0.9

<PlayerView>:
    logOP: logID
    logOP2: logID2
    trackOP0: trackID0
    trackOP1: trackID1
    listOP1:listID1

    canvas:
        Rectangle:
            pos: self.center_x - 5, 0
            size: 10, self.height

    Log:
        id: logID
        right: root.width
        y: root.center_y

    Log:
        id: logID2
        left: root.x
        top: root.top
        logColor: 0.25,0.30,0.75,1

    Track:
        id: trackID0
        right: root.right
        y: root.y +root.height/4

    TrackColumn:
        id: trackID1
        left: root.x
        y: root.y

    ListChoice:
        id:listID1

<Track>:
    boxOP : boxID
    id:trackClass
    trackColor: 0.1,0.4,0,1
    rows:1
    size:200,150
    canvas.before:
        Color:
            rgba:trackClass.trackColor
        Rectangle:
            pos:self.pos
            size:self.size
    BoxLayout:
        orientation: 'horizontal'
        TrackColumn:
            size_hint:0.25,1
            infoLP:['Prod','Oils','Sphs','Caps']
        BoxLayout:
            id:boxID
            orientation: 'horizontal'


<TrackColumn>:
    id:trackColumnClass
    trackColor: 0.25,0.5,0,1
    cols: 1
    rows: 4
    canvas.before:
        Color:
            rgba: trackColumnClass.trackColor
        Rectangle:
            pos: self.pos
            size:self.size
    Label:
        text: str(root.infoLP[0])
    Label:
        text: str(root.infoLP[1])        
    Label:
        text: str(root.infoLP[2])
    Label:
        text: str(root.infoLP[3])

<Log>:
    id:logClass
    size_hint: None,None
    size: 100,75
    logColor: 0.99,0.5,0,1
    Label:
        id: lab
        text: root.textLogSP        
        size_hint: 1,None
        size:self.texture_size
        canvas.before:
            Color:
                rgba: logClass.logColor
            Rectangle:
                pos: self.pos
                size:self.size

<Decks>:
    id:deckClass
    deckColor: 0.60,0.1,0.1,1
    canvas.before:
        Color:
            rgba: deckClass.deckColor
        Rectangle:
            pos: self.pos
            size:self.size
    Button:
        text:"Discard\ndeck"

<TBLabel@Label>:
    text: "TopBar"
    canvas.before:
        Color:
            rgba: 0.1,0.1,0.1,1
        Rectangle:
            pos: self.pos
            size:self.size

<ListChoice>:
    stackOP:stackID
    id:listChoiceClass
    listColor:0.2,0.2,0.2,1
    rows:2
    cols:1
    drag_rectangle: tpID.x, tpID.y, tpID.width, tpID.height
    drag_timeout: 10000000
    drag_distance: 0
    canvas.before:
        Color:
            rgba: listChoiceClass.listColor
        Rectangle:
            pos: self.pos
            size:self.size
    TBLabel:
        id:tpID
        top:root.top
        size_hint:1,None
        height:30
    ScrollView:
        size_hint: None,None
        height:root.height - 30
        width:root.width
        StackLayout:
            id:stackID
            orientation:"lr-tb"
            size_hint:1,None
            Label:
                text:"placeholder"
                size:self.texture_size
                size_hint: 1,None
            Label:
                text:"placeholder"
                size:self.texture_size
                size_hint: 1,None



